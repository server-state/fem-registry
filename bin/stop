#!/usr/bin/env node
const pm2 = require('pm2');

pm2.connect(function (error) {
    if (error) {
        console.error(ch.red(error));
        process.exit(2);
    }
    pm2.stop('cbm-registry', error => {
        pm2.disconnect();
        if (error) throw error;
        else {
            console.log('Server was stopped successfully.')
        }
    });
});
