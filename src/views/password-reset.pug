extends layout

block content
    .uk-padding
        h1 Password Reset
        p Please enter your account's email address in order to reset the password.
        if error
            .uk-alert-danger(uk-alert)=error
        form(method='post')
            label.uk-form-label Email
                br
                input.uk-input(name='email' type='email')
            br
            input.uk-button.uk-button-primary.uk-margin(type='submit' value='Reset password')
