extends ../../layout

block append breadcrumbs
    li
        a(href='../../')=cbm.name
    li
        span=release.version

block innercontent
    h1=`${release.name} ${release.version}`
    img(src=(release.logoUrl || ''))
    h2 Metadata
    h3 Name
    p=cbm.name
    h3 Support URL
    p
        a(href=release.support_url)=release.support_url
    h3 Website
    p
        if release.website
            a(href=release.website)=release.website
        else
            | n/a
    h3 Code Repository
    p
        if release.repo_url
            a(href=release.repo_url)=release.repo_url
        else
            | n/a
