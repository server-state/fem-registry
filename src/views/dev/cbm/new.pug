extends ../layout

block append breadcrumbs
    li
        span New CBM

block innercontent
    p Please insert the CBMs metadata. This can be changed later.
    if error
        .uk-alert-danger(uk-alert)=error
    form(method='post')
        h3 Required Fields
        label.uk-form-label Project Name (for internal use, not visible to users)
            input.uk-input(name='name' required)
        br
        input.uk-button.uk-button-primary.uk-margin(type='submit' value='Create CBM')
